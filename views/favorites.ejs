<%- include("partials/head") %>
</head>

<body>
  <%- include("partials/navbar") %>

  <style>
    .fade-in {
      animation: fadeIn 0.6s ease-in-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
  </style>

  <div class="container py-5 fade-in">
    <h2 class="mb-4 fw-bold text-center">ðŸ’– My Favorite Properties</h2>

    <% if (properties.length === 0) { %>
      <div class="text-center text-muted">
        <i class="bi bi-heartbreak fs-1"></i>
        <p class="mt-2">You havenâ€™t saved any properties yet.</p>
        <a href="/buy" class="btn btn-outline-primary">Browse Properties</a>
      </div>
    <% } else { %>
      <div class="row">
        <% properties.forEach(property => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm animate-fadeInUp">
              <img src="<%= property.image || '/images/placeholder.jpg' %>"
                   class="card-img-top"
                   alt="Property"
                   onerror="this.src='/images/placeholder.jpg'">

              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= property.title %></h5>
                <p class="text-muted"><i class="bi bi-geo-alt-fill me-1"></i> <%= property.location %></p>
                <p class="fw-bold text-primary">â‚¹<%= property.price.toLocaleString() %></p>

                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <a href="/property/<%= property._id %>" class="btn btn-sm btn-primary d-flex align-items-center gap-1">
                    <i class="bi bi-eye"></i> View
                  </a>

                  <form action="/favorites/remove/<%= property._id %>" method="POST"
                        onsubmit="return confirm('Remove this property from favorites?')">
                    <button type="submit" class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1">
                      <i class="bi bi-x-circle"></i> Remove
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include("partials/footer") %>
</body>
</html>
