<%- include('partials/head') %>
</head>

<body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-white transition-colors duration-300">
  <%- include('partials/navbar') %>

  <!-- Filter Section -->
  <div class="max-w-6xl mx-auto mt-6 animate-fadeInUp">
    <form class="flex flex-wrap gap-4 justify-center items-center bg-white dark:bg-gray-800 p-4 rounded shadow-md"
      method="GET" action="/commercial">
      <input type="text" name="location" placeholder="Location (e.g., Pune)"
        class="w-64 p-2 rounded border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">

      <select name="price"
        class="w-64 p-2 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
        <option value="">Price Range</option>
        <option value="0-10000">Below ₹10,000</option>
        <option value="10000-50000">₹10,000 - ₹50,000</option>
        <option value="50000-100000">₹50,000 - ₹1,00,000</option>
         <option value="500000-1000000">₹50,0000 - ₹1,00,0000</option>
      </select>

      <button type="submit"
        class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded shadow transition-all duration-300">
        Filter
      </button>
    </form>
  </div>

  <!-- Property Cards -->
  <div class="max-w-6xl mx-auto py-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-4">
    <% if (properties.length === 0) { %>
      <div class="col-span-full text-center text-gray-500 dark:text-gray-400">
        <p>No properties found.</p>
      </div>
    <% } else { %>
      <% properties.forEach(property => { %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transform hover:-translate-y-1 hover:shadow-2xl transition-all duration-300 animate-fadeInUp">
          <div class="relative">
            <img src="<%= property.image || '/images/placeholder.jpg' %>" alt="Property"
              class="w-full h-52 object-cover" onerror="this.src='/images/placeholder.jpg'">

            <!-- Favorite Button -->
            <form action="/favorite/<%= property._id %>" method="POST"
              class="absolute top-2 right-2 bg-white/80 rounded-full shadow p-1">
              <button type="submit" class="text-red-500 text-lg hover:scale-110 transition" title="Save Property">❤️</button>
            </form>
          </div>

          <!-- Card Body -->
          <div class="p-4 flex flex-col h-56 justify-between">
            <div>
              <h3 class="text-lg font-semibold mb-1"><%= property.title %></h3>
              <p class="text-gray-500 dark:text-gray-300 text-sm mb-2"><i class="bi bi-geo-alt-fill"></i> <%= property.location %></p>
              <p class="text-xl font-bold text-blue-600 dark:text-blue-400 mb-3">₹ <%= property.price.toLocaleString() %></p>
            </div>

            <!-- View Details Button -->
            <a href="/property/<%= property._id %>"
              class="bg-gradient-to-r from-green-500 to-blue-500 text-white text-center py-2 px-4 rounded hover:scale-105 transition-all duration-300">
              View Details
            </a>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
