<%- include('partials/head') %>
<style>
  @keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeDown {
  from { opacity: 0; transform: translateY(-30px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fadeIn { animation: fadeIn 0.8s ease-in; }
.animate-fadeDown { animation: fadeDown 1s ease-in-out; }
.animate-fadeInUp { animation: fadeInUp 1s ease-in-out; }

</style>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-800 dark:text-white transition-all duration-300">
  <%- include('partials/navbar') %>

  <!-- Header -->
  <header class="text-center py-12 bg-gradient-to-r from-indigo-600 to-blue-500 text-white shadow-md animate-fadeIn">
    <h1 class="text-4xl font-bold animate-fadeDown">Post Your Property</h1>
    <p class="text-lg mt-2 animate-fadeIn">Reach thousands of buyers and renters in minutes</p>
  </header>

  <!-- Form Section -->
  <section class="max-w-5xl mx-auto px-4 py-10">
    <form action="/add-property" method="POST" enctype="multipart/form-data"
      class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg space-y-6 animate-fadeInUp">

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Title -->
        <div>
          <label for="title" class="block mb-1 font-semibold">Property Title</label>
          <input type="text" id="title" name="title" required
            placeholder="e.g. 2 BHK Apartment in Pune"
            class="w-full p-3 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white">
        </div>

        <!-- Location -->
        <div>
          <label for="location" class="block mb-1 font-semibold">Location</label>
          <input type="text" id="location" name="location" required
            placeholder="City / Area"
            class="w-full p-3 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white">
        </div>

        <!-- Price -->
        <div>
          <label for="price" class="block mb-1 font-semibold">Price (â‚¹)</label>
          <input type="number" id="price" name="price" required
            class="w-full p-3 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white">
        </div>

        <!-- Type -->
        <div>
          <label for="type" class="block mb-1 font-semibold">Property Type</label>
          <select id="type" name="type" required
            class="w-full p-3 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white">
            <option value="">Choose...</option>
            <option value="buy">Buy</option>
            <option value="rent">Rent</option>
            <option value="commercial">Commercial</option>
          </select>
        </div>

        <!-- Image Upload -->
        <div class="md:col-span-2">
          <label for="image" class="block mb-1 font-semibold">Upload Image</label>
          <input type="file" id="image" name="image" accept="image/*" required
            class="w-full p-3 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white">
        </div>
      </div>

      <!-- Description -->
      <div>
        <label for="description" class="block mb-1 font-semibold">Description</label>
        <textarea id="description" name="description" rows="5" required
          class="w-full p-3 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-800 dark:text-white"
          placeholder="Brief details about the property..."></textarea>
      </div>

      <!-- Submit Button -->
      <div class="text-end">
        <button type="submit"
          class="bg-gradient-to-r from-green-500 to-blue-600 text-white px-6 py-3 rounded hover:scale-105 transition-transform duration-300 font-semibold shadow">
          Submit Property
        </button>
      </div>
    </form>
  </section>

  <%- include('partials/footer') %>
</body>
</html>
